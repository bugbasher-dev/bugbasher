{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": ".",
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"lib": ["ES2022"],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": false
	},
	"include": ["brand.ts", "manifest.ts"],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
