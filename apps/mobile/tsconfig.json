{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["./*"],
			"@/components/*": ["./components/*"],
			"@/lib/*": ["./lib/*"],
			"@/hooks/*": ["./hooks/*"],
			"@/types/*": ["./types/*"],
			"@/constants/*": ["./constants/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"uniwind.d.ts",
		"uniwind-env.d.ts"
	]
}
