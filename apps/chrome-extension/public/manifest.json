{
  "manifest_version": 3,
  "name": "Epic SaaS Chrome Extension",
  "version": "1.0",
  "description": "Injects a script into a domain after user permission.",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  }
}
