---
import GridDesign from '../GridDesign.astro'

const CMS_URL = (import.meta as any).env?.PUBLIC_CMS_URL

interface Props {
	media?: any
	blockType: 'mediaBlock'
}

const { media } = Astro.props
---

<section class="py-16 relative" aria-label="Media content">
	<GridDesign />
	<div class="container mx-auto px-4">
		{
			media && typeof media === 'object' && media.url && (
				<figure class="text-center">
					<img
						src={`${CMS_URL}/${media.url}`}
						alt={media.alt || ''}
						role={media.alt ? undefined : 'presentation'}
						class="w-full max-w-4xl mx-auto h-auto object-cover relative z-10"
						loading="lazy"
						decoding="async"
						width={media.width || 800}
						height={media.height || 600}
						fetchpriority="low"
					/>
				</figure>
			)
		}
	</div>
</section>
