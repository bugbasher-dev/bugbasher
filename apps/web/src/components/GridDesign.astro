---
interface Props {
	className?: string
	showBorder?: boolean
}

const {
	className = 'absolute left-0 top-0 h-full w-full border-b border-dashed border-border',
	showBorder = true,
} = Astro.props
---

<div class={className}>
	<div class="container relative h-full px-4 md:px-6">
		<div class="grid h-full w-full grid-cols-12">
			{
				Array.from({ length: 12 }, (_, i) => (
					<div
						class={`col-span-1 border-l border-dashed ${
							i === 0 ? 'border-l border-l-foreground/20' : 'border-border'
						} ${i === 11 ? 'border-r border-r-foreground/20' : ''}`}
					/>
				))
			}
		</div>
	</div>
</div>
