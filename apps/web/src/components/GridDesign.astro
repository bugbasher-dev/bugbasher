---
import { cn } from '../lib/utils'

interface Props {
	className?: string
	showBorder?: boolean
	'aria-hidden'?: boolean | 'true' | 'false'
}

const {
	className = 'absolute left-0 top-0 h-full w-full border-b border-dashed border-border',
	showBorder = true,
	'aria-hidden': ariaHidden = true,
} = Astro.props
---

<div class={className} aria-hidden={ariaHidden ? 'true' : undefined}>
	<div class="container relative h-full px-4 md:px-6 mx-auto">
		<div class="grid h-full w-full grid-cols-12">
			{
				Array.from({ length: 12 }, (_, i) => (
					<div
						class={cn(
							'col-span-1 border-l border-dashed',
							i === 0 ? 'border-border' : 'border-border/50',
							i === 11 && 'border-r border-r-border',
						)}
					/>
				))
			}
		</div>
	</div>
</div>
