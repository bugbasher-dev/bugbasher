        <SEO
            title={getPageTitle('About Us')}
            description="Learn more about our mission to help developers and founders launch production-ready applications faster."
        />
    </Fragment>

    <div class="container mx-auto py-16">
        <h1 class="text-4xl font-bold mb-8">About Us</h1>
        <div>About page content</div>
    </div>
</MarketingLayout>
