---
import MarketingLayout from '../layouts/MarketingLayout.astro'
import SEO from '../components/SEO.astro'
import { getPageTitle, brand } from '@repo/config/brand'
---

<MarketingLayout>
    <Fragment slot="head">
        <SEO
            title={getPageTitle('Support')}
            description={`Get help and support for ${brand.name}. Find answers to common questions and contact our support team.`}
        />
    </Fragment>

    <div class="container mx-auto py-16">
        <h1 class="text-4xl font-bold mb-8">Support</h1>
        <div>Support page content</div>
    </div>
</MarketingLayout>
